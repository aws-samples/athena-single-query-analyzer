Resources:
  functionCFAthenaQueryStateChange:
    Type: 'AWS::Lambda::Function'
    Properties:
      FunctionName: functionCFAthenaQueryStateChange
      Environment:
        Variables:
          emailFrom: !Sub ${emailFrom}
          emailTo: !Sub ${emailTo}
